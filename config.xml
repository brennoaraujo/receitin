<?xml version='1.0' encoding='utf-8'?>
<widget id="io.brennoaraujo.receitin" version="1.2A" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#e6e6e6" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <icon src="res/icon.png" />
    <name>Receitin</name>
    <description>
        Programa para armazenamento de receitas, baseado em HTML5 e Cordova
    </description>
    <author email="brennoaraujo25@gmail.com" href="https://github.com/brennoaraujo">
        Brenno Araujo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/splash-port-mdpi.png" density="port-mdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
